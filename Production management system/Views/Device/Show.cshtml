@{
    ViewData["Title"] = "Приборы";
}

<a href="/Device/Add">Добавить прибор</a>
<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <td><p>#</p></td>
            <td><p>Наименовие</p></td>
            <td><p>Количество</p></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var d in ViewBag.Devices)
        {
            <tr  onclick="window.location='/Device/ShowDevice/@d.Id'" style="cursor: pointer;">
                <td><p>@d.Id</p></td>
                <td><p>@d.Name</p></td>
                <td><p>@d.Quantity</p></td>
            </tr>
        }
    </tbody>
</table>
