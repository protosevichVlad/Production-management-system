@{
    ViewData["Title"] = "Прибор: " + ViewBag.Device.Name;
}

<div class="container">
    <div class="row">
        <div class="col">
            <p>Наименовие: @ViewBag.Device.Name</p>
            <p>Количество на складе:: @ViewBag.Device.Quantity</p>
        </div>
        <div class="col">
            <button class="btn btn-link float-right" type="button" onclick="window.print()">Распечатать(Сохранить)</button>
            <button class="btn btn-link float-right" type="button" onclick="window.location='/Device/Edit/@ViewBag.Device.Id'">Изменить</button>
            <button class="btn btn-link float-right" type="button" onclick="window.location='/Device/Remove/@ViewBag.Device.Id'">Удалить</button>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <h3>
                Монтаж
            </h3>
        </div>
        <div class="col">
            <h3>
                Конструктив
            </h3>
        </div>
    </div>
    <div class="row">
        <div class="col" id="Components">
            <table style="width:100%;">
                <tr>
                    <td>Наименовие</td>
                    <td>Количество в приборе</td>
                    <td>Количество на складе</td>
                </tr>
                @foreach (var comp in ViewBag.Device.DeviceComponentsTemplate)
                {
                    <tr @if (comp.Component.Quantity < comp.Quantity) { @: class="table-danger"
                        }>
                        <td>@comp.Component.Name</td>
                        <td>@comp.Quantity</td>
                        <td>@comp.Component.Quantity</td>
                    </tr>
                }
            </table>
        </div>
        <div class="col" id="Designs">
            <table style="width:100%;">
                <tr>
                    <td>Наименовие</td>
                    <td>Количество в приборе</td>
                    <td>Количество на складе</td>
                </tr>
                @foreach (var des in ViewBag.Device.DeviceDesignTemplate)
                {
                    <tr @if (des.Design.Quantity < des.Quantity) { @: class="table-danger"
                        }>
                        <td>@des.Design.Name</td>
                        <td>@des.Quantity</td>
                        <td>@des.Design.Quantity</td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>