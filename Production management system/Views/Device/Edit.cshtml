@{
    ViewData["Title"] = "Изменение прибора";
    int index = 1;
}

<form method="post" action="">
    Наименовие: <input type="text" name="Name" required value="@ViewBag.Device.Name" autocomplete="off"><br>
    Количество на складе: <input type="number" name="Quantity" value="@ViewBag.Device.Quantity" autocomplete="off" required min="0">
    <input type="number" name="Id" value="@ViewBag.Device.Id" hidden><br>
    <div class="container">
        <div class="row">
            <div class="col">
                <h3>
                    Монтаж
                    <button type="button" onclick="createComponent()" class="btn btn-link">Добавить</button>
                    <button type="button" onclick="removeComponent()" class="btn btn-link">Удалить последний</button>
                </h3>
            </div>
        </div>
        <div class="row">
            <table class="table">
                <thead>
                    <tr>
                        <td>№</td>
                        <td>#</td>
                        <td>#</td>
                        <td>#</td>
                    </tr>
                </thead>
                @{index = 1; }
                @foreach (var comp in ViewBag.Device.DeviceComponentsTemplate)
                {
                    <tr id="comTr@(index)">
                        <td>
                            @index
                        </td>
                        <td>
                            <select class="ComponentSelect align-top width-100" id="Component@(index)" name="Component@(index)">
                                @foreach (var c in ViewBag.Components)
                                {
                                    @if (c.Id == comp.Component.Id)
                                    {
                                        <option value="@c.Id" selected>@c.Name</option>
                                    }
                                    else
                                    {
                                        <option value="@c.Id">@c.Name</option>
                                    }
                                }
                            </select>
                        </td>
                        <td>
                            <input class="ComponentInput align-top" id="Component@(index)Input" name="Component@(index)Input" type="number" value="@comp.Quantity" required autocomplete="off" min="0" />
                        </td>
                        <td>
                            <textarea class="align-top w-100" name="Component@(index)Text">@comp.Description</textarea>
                        </td>
                    </tr>
                    index++;
                }
            </table>
        </div>
        <div class="row">
            <div class="col">
                <h3>
                    Конструктив
                    <button type="button" onclick="createDesign()" class="btn btn-link">Добавить</button>
                    <button type="button" onclick="removeDesign()" class="btn btn-link">Удалить последний</button>
                </h3>
            </div>
        </div>
        <div class="row">
            <div class="col" id="Designs">
                <table class="table">
                    <thead>
                        <tr>
                            <td>№</td>
                            <td>#</td>
                            <td>#</td>
                            <td>#</td>
                        </tr>
                    </thead>
                    @{index = 1; }
                    @foreach (var des in ViewBag.Device.DeviceDesignTemplate)
                    {
                        <tr id="desTr@(index)">
                            <td>
                                @index
                            </td>
                            <td>
                                <select class="DesignSelect align-top width-100" id="Design@(index)" name="Design@(index)">
                                    @foreach (var d in ViewBag.Designs)
                                    {
                                        @if (des.Design.Id == d.Id)
                                        {
                                            <option value="@d.Id" selected>@d.Name</option>
                                        }
                                        else
                                        {
                                            <option value="@d.Id">@d.Name</option>
                                        }
                                    }
                                </select>
                            </td>
                            <td>
                                <input class="DesignInput align-top" id="Design@(index)Input" name="Design@(index)Input" type="number" required value="@des.Quantity" autocomplete="off" min="0" />
                            </td>
                            <td>
                                <textarea class="align-top w-100" name="Design@(index)Text">@des.Description</textarea>
                            </td>
                        </tr>
                        index++;
                    }
                </table>
            </div>
        </div>
    </div>
    <button type="submit">Изменить</button>
</form>
