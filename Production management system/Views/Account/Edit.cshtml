@model ProductionManagementSystem.Models.RegisterModel;
@{
    ViewData["Title"] = "Редактирование пользователя";
}

<h2>Редактирование пользователя</h2>

<form action="" method="post" onsubmit="checkConfirmForm()">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Login"></label><br />
            <input asp-for="Login" />
            <span asp-validation-for="Login"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label><br />
            <input type="password" asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <label asp-for="CondPassword"></label><br />
            <input type="password" asp-for="CondPassword" />
            <span asp-validation-for="CondPassword"></span>
        </div>
        <div class="form-group">
            <label asp-for="RoleId"></label>
            <select asp-for="RoleId" asp-items="ViewBag.Roles"></select>
        </div>
        <div class="form-group">
            <input type="submit" value="Редактировать" class="btn" />
            <button class="btn" type="button" onclick="window.location='/Account/Remove?login=@Model.Login'">Удалить</button>
        </div>
    </div>
</form>