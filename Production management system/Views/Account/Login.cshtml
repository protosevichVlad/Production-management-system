@model ProductionManagementSystem.Models.LoginModel

<h2>Вход на сайт</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <div class="form-group">
                    <label asp-for="Login" class="control-label">Логин</label>
                    <input type="text" asp-for="Login" class="form-control" autocomplete="off"/>
                    <span asp-validation-for="Login" class="text-danger"/>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label">Пароль</label>
                    <input asp-for="Password" class="form-control" autocomplete="off"/>
                    <span asp-validation-for="Password" class="text-danger"/>
                </div>
                <div class="form-group">
                    <input type="submit" value="Войти" class="btn" />
                </div>
            </div>
        </form>
    </div>
</div>