@{
    ViewData["Title"] = "Users";
}

<a href="/Device/Add">Добавить прибор</a>
<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <td><p>#</p></td>
            <td><p>Login</p></td>
            <td><p>Password</p></td>
            <td><p>Role</p></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var d in ViewBag.Users)
        {
        <tr style="cursor: pointer;">
            <td><p>@d.Id</p></td>
            <td><p>@d.Login</p></td>
            <td><p>@d.Password</p></td>
            <td><p>@d.Role.RusName</p></td>
        </tr>
        }
    </tbody>
</table>
