@{
    ViewData["Title"] = "Пользователи";
}

<a href="/Account/Register">Создать нового пользователя</a>
<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <td><p>#</p></td>
            <td><p>Логин</p></td>
            <td><p>Пароль</p></td>
            <td><p>Роль</p></td>
        </tr>
    </thead>
    <tbody>
        @foreach (User u in ViewBag.Users)
        {
        <tr onclick="window.location='/Account/Edit/@u.Id'" style="cursor: pointer;">
            <td><p>@u.Id</p></td>
            <td><p>@u.Login</p></td>
            <td><p class="password">@u.Password</p></td>
            <td><p>@u.Role.RusName</p></td>
        </tr>
        }
    </tbody>
</table>
