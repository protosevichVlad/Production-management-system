@model ProductionManagementSystem.Models.Design;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Редактирование конструктива " + Model.Name;
}
<h2>Редактировать</h2>

<h4>Конструктив</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" action="" onsubmit="checkConfirmForm()">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label><br />
                    <input asp-for="Name" class="form-control" autocomplete="off" required/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Type" class="control-label"></label><br />
                    <div class="autocomplete">
                        <input id="tags" asp-for="Type" class="form-control" autocomplete="off" required/>
                    </div>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Quantity" class="control-label"></label><br />
                    <input type="number" asp-for="Quantity" class="form-control" min="0" autocomplete="off" required/>
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Изменить" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернутся к списку конструктива</a>
</div>

<script defer>
    async function createComplete() {
        let r = await new Request('/Design/GetAllTypes');
        let availableTags = await fetch(r).then(c => c.json());

        autocomplete(document.getElementById("tags"), availableTags);
    }

    createComplete();
</script>