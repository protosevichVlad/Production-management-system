@{
    ViewData["Title"] = "Добавление монтажа";
}

<form method="post" action="" autocomplete="off">
    Тип:
    <div class="autocomplete">
        <input id="tags" type="text" name="Type" required autocomplete="off">
    </div>
    <br>
    Наименование: <input type="text" name="Name" autocomplete="off" required>
    <br>
    Номинал: <input type="text" name="Nominal" autocomplete="off">
    <br>
    Корпус: <input type="text" name="Corpus" autocomplete="off">
    <br>
    Пояснение: <input type="text" name="Explanation" autocomplete="off">
    <br>
    Производитель: <input type="text" name="Manufacturer" autocomplete="off">
    <br>
    Количество: <input type="number" name="Quantity" autocomplete="off" min="0">
    <br>
    <button type="submit">Добавить</button>
</form>

<script defer>
    async function createComplete() {
        let r = await new Request('/Component/GetAllTypes');
        let availableTags = await fetch(r).then(c => c.json());

        autocomplete(document.getElementById("tags"), availableTags);
    }

    createComplete();
</script>