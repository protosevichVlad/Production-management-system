@model ProductionManagementSystem.Models.Log

@{
    ViewData["Title"] = "Подробная информация";
}
<h4>Подробная информация</h4>
<div class="alert alert-info" role="alert">
    Здесь вы можете узнать подробную информацию о сообшении №@Model.Id
</div>
<hr />
<div>
    <h4>Логи</h4>
    <hr />
    <dl class="row">
        <dt class="col-1">
            @Html.DisplayNameFor(model => model.DateTime)
        </dt>
        <dd class="col-6">
            @Html.DisplayFor(model => model.DateTime)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-1">
            @Html.DisplayNameFor(model => model.UserLogin)
        </dt>
        <dd class="col-6">
            @Html.DisplayFor(model => model.UserLogin)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-1">
            @Html.DisplayNameFor(model => model.Message)
        </dt>
        <dd class="col-6">
            @Html.DisplayFor(model => model.Message)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-light btn-sm" asp-action="Index">Вернуться к логам</a>
    @if (ViewBag.DesignId != null)
    {
        <a class="btn btn-light btn-sm" asp-controller="Designs" asp-action="Details" asp-route-id="@ViewBag.DesignId">Перейти к конструктиву</a>
    }
    @if (ViewBag.ComponentId != null)
    {
        <a class="btn btn-light btn-sm" asp-controller="Components" asp-action="Details" asp-route-id="@ViewBag.ComponentId">Перейти к монтажу</a>
    }
</div>