@model ProductionManagementSystem.WEB.Models.TaskViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Задача №" + Model.Id;
}

<div class="row">
    <div class="col">
        <h4>Подробная информация</h4>
    </div>
    <div class="col d-flex justify-content-end">
        <a class="btn btn-light btn-sm" asp-action="Details" asp-route-id="@Model.Id">Подробности</a>
        <a class="btn btn-light btn-sm" asp-action="Edit" asp-route-id="@Model.Id">Редактировать</a>
        <a class="btn btn-light btn-sm" asp-action="Delete" asp-route-id="@Model.Id">Удалить</a>
        <a class="btn btn-light btn-sm" asp-controller="Logs" asp-action="Index" asp-route-taskId="@Model.Id">Логи</a>
        <button type="button" class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#transferModal">Передать</button>
    </div>
</div>
<div class="alert alert-info" role="alert">
    Здесь вы можете узнать подробную информацию о задаче №@Model.Id.
</div>
<hr />
<div class="container">
    <div class="row">
        <div class="col">
            <h4>Задача №@Model.Id</h4>
            <h4>Прибор: <a asp-controller="Devices" asp-action="Details" asp-route-id="@Model.Device.Id">@Model.Device.ToString()</a></h4>
            <h4>Статус: @Model.Status</h4>
            <h4>Срок: @Model.Deadline.ToString("dd.MM.yyyy")</h4>
            <h4>Описание:</h4>
            <p>@Model.Description</p>
        </div>
    </div>
    <hr/>
    <div class="table-responsive-xl">
        <h4>Общее количество монтажа:
            <a class="btn btn-light btn-sm" asp-action="ReceiveComponent" asp-route-taskId="@Model.Id">Получить</a>
        </h4>
        <table style="width:100%;" class="table table-sm">
            <thead class="thead-dark">
            <tr>
                <th>Наименование</th>
                <th>В задаче</th>
                <th>На складе</th>
                <th>Получено</th>
                <th></th>
            </tr>
            </thead>
            @foreach (var comp in ViewBag.ComponentTemplate)
            {
                var obtainedComp = Model.ObtainedComponents.FirstOrDefault(d => comp.Component.Id == d.Component.Id);
                <tr @if (obtainedComp.Obtained + comp.Component.Quantity < comp.Quantity) 
                    { 
                        @: class="table-danger"
                    } 
                    else if (comp.Quantity <= obtainedComp.Obtained) 
                    { 
                        @: class="table-success"
                    } 
                >
                    <td>@comp.Component.ToString()</td>
                    <td>@comp.Quantity</td>
                    <td>@comp.Component.Quantity</td>
                    <td>@obtainedComp.Obtained</td>
                    <td>
                        <a class="btn btn-light btn-sm" asp-controller="Components" asp-action="Add" asp-route-id="@comp.Component.Id" asp-route-taskId="@Model.Id">Добавить</a>
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="table-responsive-xl">
        <h4>Общее количество конструктива:
            <a class="btn btn-light btn-sm" asp-action="ReceiveDesign" asp-route-taskId="@Model.Id">Получить</a>
        </h4>
        <table style="width:100%;" class="table table-sm">
            <thead class="thead-dark">
            <tr>
                <th>Наименование</th>
                <th>В задаче</th>
                <th>На складе</th>
                <th>Получено</th>
                <th></th>
            </tr>
            </thead>
            @foreach (var des in ViewBag.DesignTemplate)
            {
                var obtainedDes = Model.ObtainedDesigns.FirstOrDefault(d => des.Design.Id == d.Design.Id);
                <tr @if (obtainedDes.Obtained + des.Design.Quantity < des.Quantity) 
                    { 
                        @: class="table-danger"
                    } 
                    else if (des.Quantity <= obtainedDes.Obtained) 
                    { 
                        @: class="table-success"
                    } 
                >
                    <td>@des.Design.ToString()</td>
                    <td>@des.Quantity</td>
                    <td>@des.Design.Quantity</td>
                    <td>@obtainedDes.Obtained</td>
                    <td>
                        <a class="btn btn-light btn-sm" asp-controller="Designs" asp-action="Add" asp-route-id="@des.Design.Id" asp-route-taskId="@Model.Id">Добавить</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
<br>
<hr/>
<h3>Логи</h3>
<div class="table-responsive">
    <table class="table table-sm">
        <thead>
        <tr>
            <th>
                Дата и время
            </th>
            <th>
                Сообщение
            </th>
            <th>
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var log in ViewBag.Logs)
        {
            <tr>
                <td>
                    @log.DateTime
                </td>
                <td>
                    @log.Message
                </td>
                <td>
                    <a class="btn btn-light btn-sm" asp-controller="Logs" asp-action="Details" asp-route-id="@log.Id">Подробности</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
<div class="modal fade" id="transferModal" tabindex="-1" aria-labelledby="transferModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="transferModalLabel">Передача задачи</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" asp-action="Transfer" id="transferForm">
                    <input name="taskId" value="@Model.Id" hidden>
                    <div class="mb-3">
                        <label for="to" class="col-form-label"></label>
                        <select class="form-select" id="to" name="to" asp-items="ViewBag.States" onchange="changeStateTransfer()"></select>
                    </div>
                    <div class="mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="full" id="radioTransferTrue" checked value="true">
                            <label class="form-check-label" for="radioTransferTrue">
                                Предать полностью
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="full" id="radioTransferFalse" value="false">
                            <label class="form-check-label" for="radioTransferFalse">
                                Предать частично
                            </label>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="message-text" class="col-form-label">Примечание:</label>
                        <textarea class="form-control" id="message-text" name="message"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                <button type="button" class="btn btn-primary" onclick="document.querySelector('#transferForm').submit()">Передать</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        changeStateTransfer();
    </script>
}
