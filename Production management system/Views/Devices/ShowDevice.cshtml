@{
    ViewData["Title"] = "Прибор: " + ViewBag.Device.Name;
}

<div class="container">
    <dl class="row">
        <div class="col-sm-10">
            <button class="btn btn-link float-right" type="button" onclick="window.print()">Распечатать(Сохранить)</button>
            <button class="btn btn-link float-right" type="button" onclick="window.location='/Devices/Edit/@ViewBag.Device.Id'">Изменить</button>
            <button class="btn btn-link float-right" type="button" onclick="window.location='/Devices/Remove/@ViewBag.Device.Id'">Удалить</button>
        </div>
        <dt class = "col-sm-4">
            Наименовие
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.Device.Name
        </dd>
        <dt class = "col-sm-4">
            Количество на складе:
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.Device.Quantity
        </dd>
    </dl>
    <div class="row">
        <div class="col">
            <h3>
                Монтаж
            </h3>
        </div>
    </div>
    <div class="row">
        <div class="col" id="Components">
            <table style="width:100%;">
                <tr>
                    <td>Наименовие</td>
                    <td>Количество в приборе</td>
                    <td>Количество на складе</td>
                    <td width="40%">Примечание</td>
                </tr>
                @foreach (var comp in ViewBag.Device.DeviceComponentsTemplate)
                {
                    <tr @if (comp.Component.Quantity < comp.Quantity) { @: class="table-danger"
                        }>
                        <td>@comp.Component.Name</td>
                        <td>@comp.Quantity</td>
                        <td>@comp.Component.Quantity</td>
                        <td width="40%">@comp.Description</td>
                    </tr>
                }
            </table>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col">
            <h3>
                Конструктив
            </h3>
        </div>
    </div>
    <div class="row">
        <div class="col" id="Designs">
            <table style="width:100%;">
                <tr>
                    <td>№</td>    
                    <td>Наименовие</td>
                    <td>Количество в приборе</td>
                    <td width="40%">Примечание</td>
                </tr>
                @foreach (var des in ViewBag.Device.DeviceDesignTemplate)
                {
                    <tr @if (des.Design.Quantity < des.Quantity) { @: class="table-danger"
                        }>
                        <td>@des.Design.Name</td>
                        <td>@des.Quantity</td>
                        <td>@des.Design.Quantity</td>
                        <td width="40%">@des.Description</td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>
