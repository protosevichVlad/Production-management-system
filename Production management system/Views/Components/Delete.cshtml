@model ProductionManagementSystem.WEB.Models.ComponentViewModel;

@{
    ViewData["Title"] = "Удалить монтаж";
}
<div class="row">
    <div class="col">
        <h4>Удалить</h4>
        <h5>Вы уверены, что хотите удалить это?</h5>
    </div>
    <div class="col d-flex justify-content-end">
        <form asp-action="Delete" class="text-right">
            <input type="hidden" asp-for="Id"/>
            <input type="submit" value="Удалить" class="btn btn-danger"/>
        </form>
    </div>
</div>
<hr />
<div>
    <h4>Монтаж</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nominal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nominal)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Corpus)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Corpus)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Explanation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Explanation)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Manufacturer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Manufacturer)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
    </dl>
</div>
@if (ViewBag.ErrorMessage != null)
{
    <partial name="Partail/PartialError" />
    
    @section Scripts
    {
        <script>
            let errorModal = new bootstrap.Modal(document.getElementById('errorModal'), 
            {
                keyboard: false
            })
            errorModal.show();
        </script>
    }
}
