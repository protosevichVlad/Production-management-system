@model ProductionManagementSystem.Models.Component;

@{
    ViewBag.Title = "Получить " + Model.Name;
}
<h2>Получить</h2>

<h4>Конструктив</h4>
<dl class="row">
    <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nominal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nominal)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Corpus)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Corpus)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Explanation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Explanation)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Manufacturer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Manufacturer)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dt class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dt>
    <div class="col-md-4">
        <form action="" method="post">
            <input hidden id="taskId" name="taskId" value="@ViewBag.TaskId">
            <input hidden id="componentId" name="componentId" value="@Model.Id">
            <div class="form-group">
                <label for="quantity" class="control-label">Получить</label>
                <input name="quantity" id="quantity" class="form-control" type="number" autocomplete="off" value="0" min="0" max="@Model.Quantity" required/>
            </div>
            <button class="btn btn-info" onclick="">Получить</button>
        </form>
    </div>
</dl>