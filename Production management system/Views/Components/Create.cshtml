@model ProductionManagementSystem.Models.Component

@{
    ViewData["Title"] = "Создать монтаж";
}

<h4>Создать монтаж</h4>
<div class="alert alert-info" role="alert">
    Здесь вы можете создать новый монтаж
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" list="datalistOptions" autocomplete="off">
                <datalist id="datalistOptions">
                    @foreach (var type in ViewBag.AllTypes)
                    {
                        <option value="@type"/>
                    }
                </datalist>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" autocomplete="off" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nominal" class="control-label"></label>
                <input asp-for="Nominal" class="form-control" autocomplete="off" />
                <span asp-validation-for="Nominal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Corpus" class="control-label"></label>
                <input asp-for="Corpus" class="form-control" autocomplete="off" />
                <span asp-validation-for="Corpus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Explanation" class="control-label"></label>
                <input asp-for="Explanation" class="form-control" autocomplete="off" />
                <span asp-validation-for="Explanation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Manufacturer" class="control-label"></label>
                <input asp-for="Manufacturer" class="form-control" autocomplete="off" />
                <span asp-validation-for="Manufacturer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" autocomplete="off" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку монтажа</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
