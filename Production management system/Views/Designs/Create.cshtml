@model ProductionManagementSystem.WEB.Models.DesignViewModel;

@{
    ViewData["Title"] = "Создать конструктив";
}

<h4>Создать конструктив</h4>
<div class="alert alert-info" role="alert">
    Здесь вы можете создать новый монтаж конструктив
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" list="datalistOptions" autocomplete="off">
                <datalist id="datalistOptions">
                    @foreach (var type in ViewBag.AllTypes)
                    {
                        <option value="@type"/>
                    }
                </datalist>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" list="datalistDesignNames" autocomplete="off" />
                <datalist id="datalistDesignNames">
                    @foreach (var name in ViewBag.AllDesigns)
                    {
                        <option value="@name"/>
                    }
                </datalist>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" autocomplete="off" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShortDescription" class="control-label"></label>
                <input asp-for="ShortDescription" class="form-control" autocomplete="off" />
                <span asp-validation-for="ShortDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" autocomplete="off"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку конструктива</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
