@model ProductionManagementSystem.Models.Design

@{
    ViewData["Title"] = "Подробная информация";
}

<h4>Подробная информация</h4>
<div class="alert alert-info" role="alert">
    Здесь вы можете узнать подробную информацию или совершить дополнительные действие с @Model.Name.
</div>
<hr />
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ShortDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ShortDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-light" asp-action="Index">Вернуться к списку монтажа</a>
    <a class="btn btn-light" asp-action="Add" asp-route-id="@Model.Id">Добавить</a>
    <a class="btn btn-light" asp-action="Receive" asp-route-id="@Model.Id">Получить</a>
    <a class="btn btn-light" asp-action="Edit" asp-route-id="@Model.Id">Редактировать</a>
    <a class="btn btn-light" asp-action="Delete" asp-route-id="@Model.Id">Удалить</a>
    <a class="btn btn-light" asp-controller="Logs" asp-action="Index" asp-route-designId="@Model.Id">Логи</a>
</div>
