@model ProductionManagementSystem.Core.Models.Tasks.Task;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Добавление прибора";
}
<h4>Создать задачу</h4>
<div class="alert alert-info" role="alert">
    Здесь вы можете создать новую задачу.
</div>
<hr />
<form method="post" action="">
    <div class="col-md-4">
        <div class="form-group">
            <div class="form-group">
                <label asp-for="Deadline" class="control-label"></label>
                <input asp-for="Deadline" type="text" class="form-control datepicker" placeholder="dd.MM.yyyy">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label">Описание:</label>
            <textarea asp-for="Description" class="form-control" autocomplete="off"></textarea>
        </div>
    </div>
    <div class="col-md-12">
        <table class="table">
            <thead>
            <tr>
                <th>№</th>
                <th width="30%">Прибор</th>
                <th>Количество</th>
                <th class="border-0"></th>
            </tr>
            </thead>
            <tbody>
            <tr id="devTr0"></tr>
            </tbody>
        </table>
        <button type="button" onclick="createTaskItem()" class="btn btn-link" id="buttonCreateDevice">
            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true" hidden></span>
            Добавить
        </button>
    </div>
    <div class="form-group">
        <input type="submit" value="Создать" class="btn btn-primary" />
    </div>
</form>