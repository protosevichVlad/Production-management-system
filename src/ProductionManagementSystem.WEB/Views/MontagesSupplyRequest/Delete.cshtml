@model ProductionManagementSystem.Models.SupplyRequests.MontageSupplyRequest

@{
    ViewData["Title"] = "Удалить заявку на снабжения";
}
<div class="row">
    <div class="col">
        <h4>Удалить</h4>
        <h5>Вы уверены, что хотите удалить это?</h5>
    </div>
    <div class="col d-flex justify-content-end">
        <form asp-action="Delete" class="text-right">
            <input type="hidden" asp-for="Id"/>
            <input type="submit" value="Удалить" class="btn btn-danger"/>
        </form>
    </div>
</div>
<hr />
<div>
    <h4>Заявка на снабжения монтажа</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        @if (Model.TaskId != null)
        {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.TaskId)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.TaskId)
            </dd>
        }
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Montage.Name)
        </dt>
        <dd class = "col-sm-10">
            @Model.Montage.ToString()
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateAdded)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateAdded)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DesiredDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DesiredDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Comment)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Comment)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StatusSupply)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StatusSupply)
        </dd>
    </dl>
</div>
