@model IEnumerable<ProductionManagementSystem.Core.Models.Users.User>
@{
    ViewBag.Title = "Список пользователей";
}
 
<a asp-action="Create">Создать пользователя</a>
 
<table class="table">
    <tr><th>Логин</th><th></th></tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.UserName</td>
            <td>
                <a class="btn btn-light btn-sm" asp-controller="Logs" asp-action="Index" asp-route-userName="@user.UserName">Логи</a>
                <a class="btn btn-light btn-sm" asp-controller="Users" asp-action="ChangePassword" asp-route-userName="@user.UserName">Изменить пароль</a>
                @if (user.UserName != "admin")
                {
                    <a class="btn btn-light btn-sm" asp-action="Delete" asp-route-username="@user.UserName">Удалить</a>
                    <a class="btn btn-light btn-sm" asp-action="ChangeRole" asp-route-username="@user.UserName">Права доступа</a>
                }
            </td>
        </tr>
    }
</table>