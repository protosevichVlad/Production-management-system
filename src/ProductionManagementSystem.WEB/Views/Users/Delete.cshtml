@model ProductionManagementSystem.Core.Models.Users.User;

@{
    ViewData["Title"] = "Удалить пользователя " + @Model.UserName;
}
<div class="row">
    <div class="col">
        <h4>Удалить</h4>
        <h5>Вы уверены, что хотите удалить это?</h5>
    </div>
    <div class="col d-flex justify-content-end">
        <form asp-action="Delete" asp-route-userName="@Model.UserName" method="post" class="text-right">
            <input type="submit" value="Удалить" class="btn btn-danger"/>
        </form>
    </div>
</div>
<hr />
<div>
    <h4>Пользователь</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Логин
        </dt>
        <dd class = "col-sm-10">
            @Model.UserName
        </dd>
    </dl>
</div>

