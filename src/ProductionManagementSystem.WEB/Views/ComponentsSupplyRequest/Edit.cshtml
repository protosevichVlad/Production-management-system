@model ProductionManagementSystem.WEB.Models.ComponentsSupplyRequestViewModel

@{
    ViewBag.Title = "title";
    Layout = "_LayoutInDevelop";
}

<h4>Изменение заявки №@Model.Id</h4>
<div class="alert alert-info" role="alert">
    Здесь вы можете изменить заявку на заказ монтажа
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input asp-for="Id" hidden class="form-control" autocomplete="off">
            <input asp-for="ComponentId" hidden class="form-control" autocomplete="off">
            <input asp-for="DateAdded" hidden class="form-control" autocomplete="off">
            <input asp-for="User" hidden class="form-control" autocomplete="off">
            <input asp-for="StatusSupply" hidden class="form-control" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TaskId" class="control-label"></label>
                <input asp-for="TaskId" class="form-control" autocomplete="off" readonly>
                <span asp-validation-for="TaskId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DesiredDate" class="control-label"></label>
                <input asp-for="DesiredDate" class="form-control" autocomplete="off" />
                <span asp-validation-for="DesiredDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Component" class="control-label"></label>
                <input asp-for="Component" class="form-control" autocomplete="off" disabled/>
                <span asp-validation-for="Component" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" autocomplete="off" min="0"/>
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <input asp-for="Comment" class="form-control" autocomplete="off" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Изменить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
