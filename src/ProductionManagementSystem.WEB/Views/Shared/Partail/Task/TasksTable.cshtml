@using ProductionManagementSystem.Core.Models.Infrastructure
@model IEnumerable<ProductionManagementSystem.Core.Models.Tasks.Task>

<div class="table-responsive">
    <table class="table table-sm">
        <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NumSortParm"]">№</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DeviceSortParm"]">Прибор</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["StartDateSortParm"]">Дата начала</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DeadlineSortParm"]">Срок</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["StatusSortParm"]">Статус</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["OrderIdSortParm"]">№ заказа</a>
            </th>
            <th>
                Описание
            </th>
            <th class="td-with-buttons">
                    <a class="btn btn-primary btn-sm m-1" asp-action="Create">Создать новую задачу</a>
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>
                    @t.Id
                </td>
                <td>
                    @t.Device.ToString()
                </td>
                <td>
                    @t.StartTime.ToString("dd.MM.yyyy")
                </td>
                <td>
                    @t.Deadline.ToString("dd.MM.yyyy")
                </td>
                <td>
                    @t.Status.GetTasksStatusName()
                </td>
                <td>
                    @t.OrderId
                </td>
                <td>
                    <div class="overflow-hidden text-truncate description">
                        @t.Description
                    </div>
                </td>
                <td>
                    <a class="btn btn-light btn-sm" asp-controller="Tasks" asp-action="Details" asp-route-id="@t.Id">Подробности</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>