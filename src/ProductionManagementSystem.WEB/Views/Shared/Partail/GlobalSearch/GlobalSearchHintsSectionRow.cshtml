@using ProductionManagementSystem.WEB.Models.AltiumDB.GlobalSearch
@using ProductionManagementSystem.Core.Models.AltiumDB
@using ProductionManagementSystem.Core.Models
@using ProductionManagementSystem.Core.Models.PCB
@model ProductionManagementSystem.WEB.Models.AltiumDB.GlobalSearch.GlobalSearchHintsSectionRowViewModel

<div class="bx--row" style="height: 5px"></div>
@switch (Model.Type)
{
  case HintsSectionRowType.Text:
    <div class="bx--row">
      @Model.Content.ToString()
    </div>
    break;

  case HintsSectionRowType.BaseEntity:
  case HintsSectionRowType.Pcb:
  case HintsSectionRowType.Device:
    var item = new UniversalItem(Model.Content);
    if (item == null)
      break;

    <div class="bx--row altiumdb--global-search--hints--row" onclick="window.open('@item.Path', '_blank');">
      <div class="bx--col-sm-1">
        <img src="@item.ImagePath" class="altiumdb--entity-table--image">
      </div>
      <div class="bx--col-sm-3">
        <div class="bx--grid">
          <div class="bx--row">@item.Name</div>
          <div class="bx--row" style="height: 4px"></div>
          <div class="bx--row">@item.PartNumber</div>
          <div class="bx--row" style="height: 4px"></div>
          <div class="bx--row">@item.Category</div>
        </div>
      </div>
    </div>
    break;

  case HintsSectionRowType.Table:
    var table = @Model.Content as Table;
    if (table == null)
      break;
    
    <div class="bx--row altiumdb--global-search--hints--row" onclick="location.href='/Entities?tableId=@table.Id'">
      @table.DisplayName
    </div>
    break;
}
