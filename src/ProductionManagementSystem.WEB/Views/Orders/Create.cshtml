@model ProductionManagementSystem.Models.Orders.Order

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h4>Новый заказ</h4>
<div class="alert alert-info" role="alert">
    Здесь вы можете создать новый заказ.
</div>
<hr />
<form method="post" action="">
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="Customer" class="control-label"></label>
            <input asp-for="Customer" class="form-control" autocomplete="off"/>
        </div>
        <div class="form-group">
            <label asp-for="Deadline" class="control-label"></label>
            <input asp-for="Deadline" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label">Описание:</label>
            <textarea asp-for="Description" class="form-control" autocomplete="off"></textarea>
        </div>
    </div>
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th>№</th>
                    <th width="30%">Прибор</th>
                    <th>Количество</th>
                    <th width="45%">Примечание</th>
                    <th class="border-0"></th>
                </tr>
            </thead>
            <tbody>
                <tr id="devTr0"></tr>
            </tbody>
        </table>
        <button type="button" onclick="createDevice()" class="btn btn-link" id="buttonCreateDevice">
            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true" hidden></span>
            Добавить
        </button>
    </div>
    <div class="form-group">
        <input type="submit" value="Создать" class="btn btn-primary" />
    </div>
</form>