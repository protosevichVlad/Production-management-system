@model System.Collections.Generic.IEnumerable<ProductionManagementSystem.Core.Models.SupplyRequests.DesignSupplyRequest>

@{
    ViewBag.Title = "Список заявок на снабжение конструктива";
}

<h2>Cписок</h2>
<div class="table-responsive-xl">
    <table class="table table-sm">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Design.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TaskId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateAdded)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DesiredDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatusSupply)
            </th>
            <th class="td-with-buttons">
                <a class="btn btn-primary btn-sm" asp-action="Create">Создать новую</a>
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    <a asp-controller="Designs" asp-action="Details" asp-route-id="@item.Design.Id">@item.Design.ToString()</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TaskId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateAdded)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DesiredDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StatusSupply)
                </td>
                <td class="td-with-buttons">
                    <a class="btn btn-light btn-sm" asp-action="Details" asp-route-id="@item.Id">Подробности</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
    @* <partial name="Partail/_Pagination" /> *@
</div>
