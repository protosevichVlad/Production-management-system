@model System.Collections.Generic.IEnumerable<ProductionManagementSystem.WEB.Models.DesignsSupplyRequestViewModel>

@{
    ViewBag.Title = "title";
    Layout = "_LayoutInDevelop";
}

<h2>Cписок</h2>
<p>
    <a asp-action="Create">Создать новую заявку</a>
</p>
<div class="row">
    <div class="col">
        <form asp-action="Index" method="get">
            <p>
                Поиск: <input name="CurrentFilter" list="datalistNameDesigns"  autocomplete="off" value="@ViewData["CurrentFilter"]"/>
                <datalist id="datalistNameDesigns">
                    @* @foreach (var name in ViewBag.AllDesigns) *@
                    @* { *@
                    @*     <option value="@name"/> *@
                    @* } *@
                </datalist>
                <input type="submit" value="Поиск" class="btn btn-primary"/>
                @if (@ViewData["CurrentFilter"] != null)
                {
                    <text>|</text>
                    <a asp-action="Index">Вернуться к полному списку</a>
                }
            </p>
        </form>
    </div>
    <div class="col d-flex align-items-center justify-content-end">
        @if (@ViewData["CurrentFilter"] == null)
        {
            <p class="d-flex">@Model.Count()</p>
        }
        else
        {
            <p class="d-flex">Было найдено @Model.Count()</p>
        }
    </div>
</div>
<div class="table-responsive-xl">
    <table class="table table-sm">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Design.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TaskId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateAdded)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DesiredDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatusSupply)
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @item.Design.ToString()
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TaskId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateAdded)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DesiredDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StatusSupply)
                </td>
                <td class="td-with-buttons">
                    <a class="btn btn-light btn-sm" asp-action="Details" asp-route-id="@item.Id">Подробности</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
    @* <partial name="Partail/_Pagination" /> *@
</div>
